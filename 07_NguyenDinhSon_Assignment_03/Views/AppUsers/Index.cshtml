@model IEnumerable<_07_NguyenDinhSon_Assignment_03.Models.AppUsers>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody id="tableBody">
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.UserID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.UserID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.UserID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/microsoft/signalr/dist/browser/signalr.js"></script>
<script>
    const LoadUsers = () => {
        var tr = '';
        $.ajax({
            url: '/AppUsers/GetUsers',
            method: 'GET',
            success: (result) => {
                $.each(result, (k, v) => {
                    tr += `<tr>
                            <td> ${v.fullName} </td>
                            <td> ${v.address} </td>
                            <td> ${v.email} </td>
                            <td> ${v.password} </td>
                            <td>
                                <a href='../AppUsers/Edit?id=${v.userID}'>Edit</a> |
                                <a href='../AppUsers/Details?id=${v.userID}'>Details</a> |
                                <a href='../AppUsers/Delete?id=${v.userID}'>Delete</a> |
                            </td>
                        </tr>
                        `;
                });
                window.alert('There are new user was added')

                $('#tableBody').html(tr);
            },
            error: (error) => {
                console.log(error);
            }
        });
    };


    var connection = new signalR.HubConnectionBuilder().withUrl("/signalrServer").build();
    connection.start();

    connection.on("CreateNewUser", function () {
        LoadUsers();
    });
</script>
